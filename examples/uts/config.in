# Specify which targets should be built when a "make all"
# is performed.  The default is only uts-seq.

TARGETS_ALL = uts-seq time_rng uts-pthread uts-mpi uts-shmem

# -------------------------------------
# C Compiler 
# -------------------------------------
CC = gcc
CC_OPTS = -O3
LD_OPTS = -lm

# -------------------------------------
# MPI Compiler 
# -------------------------------------
MPICC = mpicc
MPICC_OPTS = -O3
MPILD_OPTS = -lm


# -------------------------------------
# UPC Compiler 
# -------------------------------------
UPCC = upcc
UPCC_OPTS = 
UPCLD_OPTS = -lm


# -------------------------------------
# OPENMP Compiler 
# -------------------------------------
OMPCC = icc
OMPCC_OPTS = -fopenmp
OMPLD_OPTS = -lm


# -------------------------------------
# SHMEM Compiler 
# -------------------------------------
SHMCC = oshcc
SHMCC_OPTS = -O3
SHMLD_OPTS = 

# -------------------------------------
# GPSHMEM Compiler 
# -------------------------------------
GPSHMCC = mpicc
GPSHMCC_OPTS = -w -I$(HOME)/opt/include -L$(HOME)/opt/lib
GPSHMLD_OPTS = -lm -lgpshmem -larmci


# -------------------------------------
# Optional Build Flags:
# -------------------------------------
### Include Chunk tracking debug messages
#FLAGS += -DCTRK
#FLAGS += -DTRACE

# -------------------------------------
# Select random number generator
# -------------------------------------

#RNG=Devine
#RNG=ALFG
RNG=BRG
